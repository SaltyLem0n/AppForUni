<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RSU360 DataCentric</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppForUni.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar: Clean white background defined in site.css -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Prizes" asp-action="Search">
                    <!-- LOGO: Ensure 'logo.png' exists in wwwroot/images/ -->
                    <img src="~/images/logo.png" onerror="this.style.display='none'" alt="Logo" />
                    RSU360 DataCentric
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Navigation Links -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Prizes" asp-action="Select">Select</a> 
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Prizes" asp-action="Search">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Index">Employees</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer: Blue background with white text -->
    <footer class="footer border-top">
        <div class="container text-center">
            Developed By <strong>Information and Communication Technology (International Program)</strong>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>